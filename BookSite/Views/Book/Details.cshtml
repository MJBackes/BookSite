@model BookSite.Models.SiteModels.Book

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt class="col-md-2">
        </dt>

        <dd>
            <img src="@Model.Thumbnail" />
        </dd>

        <dt class="col-md-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt class="col-md-2">
            @Html.DisplayNameFor(model => model.Authors)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Authors)
        </dd>

        <dt class="col-md-2">
            @Html.DisplayNameFor(model => model.Categories)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Categories)
        </dd>

        <dt class="col-md-3">
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt class="col-md-1">
            @Html.DisplayNameFor(model => model.PageCount)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PageCount)
        </dd>

    </dl>
    @Html.ActionLink("Add to my Shelf", "AddBookToCollection","Member", new { id = Model.GoogleVolumeId}, new { @class="btn btn-primary"})
    <h3>Reviews</h3>
    <table class="table-striped">
        <tbody>
            <tr>
                <th class="col-md-2">
                    User Name
                </th>
                <th class="col-md-2">
                    Rating
                </th>
                <th class="col-md-6">
                    Review
                </th>
            </tr>
            @if (ViewBag.Reviews.Count > 0)
            {
                foreach (BookSite.Models.SiteModels.Review review in ViewBag.Reviews)
                {
                    <tr>
                        <td>
                            @review.Member.DisplayName
                        </td>
                        <td>
                            @review.Rating
                        </td>
                        <td>
                            @review.Body
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td></td>
                    <td></td>
                    <td>
                        No reviews have been left for this book yet. Be the first to write one!
                    </td>
                </tr>
            }
            <tr>
                <td></td>
                <td></td>
                <td>
                    @Html.ActionLink("Leave a Review","Create","Review", new { id = Model.GoogleVolumeId }, new { @class="btn btn-primary"})
                </td>
            </tr>
            </tbody>
        </table>
        </div>
<p>
    |@Html.ActionLink("Home", "Index")
</p>
